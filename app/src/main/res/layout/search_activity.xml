<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <SearchView
        android:id="@+id/search_bar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/search_bar_spacing"
        android:layout_marginRight="@dimen/search_bar_spacing"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >
    </SearchView>

    <TextView
        android:id="@+id/recent_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar_search"
        android:layout_marginLeft="@dimen/spacing_sides_x1.5"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/recently_searched"
        android:textAllCaps="false"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recent_view_text"
        android:layout_marginLeft="@dimen/spacing_sides_x2"
        android:layout_marginTop="@dimen/activity_vertical_margin">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>