<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_up"
        android:textSize="@dimen/medium_text_size"/>

    <RelativeLayout
        android:id="@+id/edit_text_frags_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_sign_up"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        >

        <EditText
            android:id="@+id/email_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_sign_up"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="25"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/confirm_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_sign_up"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="@string/password_confirm"
            android:inputType="textPassword"
            android:maxLength="25"
            android:maxLines="1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_text_frags_sign_up"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/spacing_sides">

        <TextView
            android:id="@+id/sign_up_button_sing_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/button_spacing"
            android:text="@string/sign_up"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/cancel_button_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sign_up_button_sing_up"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>

</RelativeLayout>