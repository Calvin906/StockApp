<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/percentage_portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_x3"
        android:text="2"
        android:textColor="@color/percentageColorPositive"
        android:textSize="@dimen/medium_text_size"
        />

    <TextView
        android:id="@+id/price_portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_x3"
        android:layout_toRightOf="@+id/percentage_portfolio"
        android:text="3"
        android:textColor="@color/stockPriceColor"
        android:textSize="@dimen/medium_text_size"/>

    <TextView
        android:id="@+id/ticker_portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_x4"
        android:layout_toRightOf="@+id/price_portfolio"
        android:textAllCaps="true"
        android:textColor="@color/tickerColor"
        android:textSize="@dimen/medium_text_size"/>
</RelativeLayout>