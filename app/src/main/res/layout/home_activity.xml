<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@id/welcome_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vertical_start"
        android:text="@string/welcome_home"
        android:textSize="@dimen/welcome_text_size"/>

    <RelativeLayout
        android:id="@id/buttons_home"
        android:layout_below="@id/welcome_home"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/vertical_start"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@id/login_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@id/sign_up_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/login_home"
            android:text="@string/sign_up"
            android:layout_marginLeft="@dimen/button_spacing"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/colorPrimary"
            />

    </RelativeLayout>


</RelativeLayout>